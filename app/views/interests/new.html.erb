<div class="container">
  <div class="block">
    <h1 class="title">Register your interest</h1>
    <%= form_for @interest do |form| %>
      <div class="field">
        <%= form.label "First Name", class: "label" %>
        <div class="control">
          <%= form.text_field :first_name, class: "input"%>
        </div>
      </div>
      <div class="field">
        <%= form.label "Postcode", class: "label" %>
        <div class="control">
          <%= form.text_field :postcode, class: "input" %>
        </div>
      </div>
      <div class="field">
        <%= form.label "Email", class: "label" %>
        <div class="control">
          <%= form.email_field :email, class: "input" %>
        </div>
      </div>
      <div class="field">
          <%= form.label "Telephone Number", class: "label" %>
        <div class="control">
          <%= form.text_field :tel, class: "input" %>
        </div>
      </div>
      <%= form.submit "Register Interest", class: "button is-primary"  %>
    <% end %>
  </div>
</div>